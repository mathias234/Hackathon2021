<div class="p-5">

  <h1 class="text-5xl text-gray-200">Events</h1>

  <p id="notice"><%= notice %></p>

  <div class="pb-4">
    <% @events.each do |event| %>
      <div class="my-5 p-5 bg-gray-800 text-gray-200 border-2 border-gray-800 rounded">
        <% if session[:user_id] %>
          <% if !event.attendees.find { |attendee| attendee.user_id == session[:user_id] } %> 
            <%= link_to 'Join', join_event_path(id: event.id), class: "float-right border-2 rounded border-gray-200 py-2 px-4 bg-gray-200 text-gray-800 hover:bg-gray-300" %> 
          <% else %>
            <%= link_to 'Leave', leave_event_path(id: event.id), class: "float-right border-2 rounded border-gray-200 py-2 px-4 bg-gray-200 text-gray-800 hover:bg-gray-300" %> 
          <% end %>
        <% end %>

        <div class="flex pb-1">
          <h1 class="text-2xl"><%= link_to event.title, event %></h1> 
          <div class="flex pl-5 pt-1">
            <%= event.from_date %>
            -
            <%= event.to_date %>
          </div>
        </div>
        <%= event.description %>
        <div class="text-gray-600">
          <%= event.attendees.count %> people attending
        </div>
      </div>
    <% end %>

    <%= link_to 'New Event', new_event_path, class: "border-2 rounded border-gray-200 py-2 px-4 bg-gray-200 text-gray-800 hover:bg-gray-300" %>
  </div>


</div>
